<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="JavaFXTemplate" alignment="CENTER" spacing="20" style="-fx-padding: 20;">
    <!-- Title and Author Information -->
    <Label text="Three-Card Poker
CS 342
Waleed Faruki and Abhi Patel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-alignment: center;" />
    
    <!-- Poker Card Image -->
    <ImageView fx:id="pokerCardImage" fitWidth="200" fitHeight="150" />
    
    <!-- New Game Button -->
    <Button fx:id="startGameButton" text="New Game" onAction="#startGame" style="-fx-font-size: 16px; -fx-padding: 10 20px; -fx-background-color: #90EE90;" />
    
    <!-- Rules Button -->
    <Button fx:id="rulesButton" text="Rules"  style="-fx-font-size: 16px; -fx-padding: 10 20px;" />
</VBox>

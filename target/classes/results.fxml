<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="20" style="-fx-padding: 20;" fx:controller="JavaFXTemplate">
    <!-- Title for Results Screen -->
    <Label text="Game Results" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Results for Player 1 -->
    <VBox alignment="CENTER" spacing="10">
        <Label fx:id="player1Result" text="Player 1: " style="-fx-font-size: 18px;" />
        <Label fx:id="player1Winnings" text="Total Winnings: $0" style="-fx-font-size: 16px;" />
    </VBox>

    <!-- Results for Player 2 -->
    <VBox alignment="CENTER" spacing="10">
        <Label fx:id="player2Result" text="Player 2: " style="-fx-font-size: 18px;" />
        <Label fx:id="player2Winnings" text="Total Winnings: $0" style="-fx-font-size: 16px;" />
    </VBox>

    <!-- Buttons for Actions -->
    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="playAgainButton" text="Play Again" onAction="#freshStart" style="-fx-font-size: 16px; -fx-padding: 10 20px; -fx-background-color: #90EE90;" />
        <Button fx:id="exitButton" text="Exit Game" onAction="#exitGame" style="-fx-font-size: 16px; -fx-padding: 10 20px; -fx-background-color: #FF6347;" />
    </HBox>
</VBox>